<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.product.mapper.ProductMapper">
	<select id="getList" resultType="ProductVO">
		SELECT * FROM product
	</select>

	<select id="getProduct" parameterType="String"
		resultType="ProductVO">
		select * from product where product_name = #{name}
	</select>

	<select id="relatedList" resultType="ProductVO">
	 <![CDATA[
	select*from (
	select * from product order by like_it desc	
	) where rownum<=4]]>

	</select>
</mapper>